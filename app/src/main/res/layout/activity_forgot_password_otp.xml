<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="top|center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo_vertic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/logo" />

        <!-- Hướng dẫn -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi đã gửi mã OTP gồm 6 chữ số đến email của bạn. Vui lòng kiểm tra hộp thư (bao gồm cả mục Spam) và nhập mã bên dưới để tiếp tục."
            android:textColor="#6B7580"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_18pt_light"
            android:paddingHorizontal="8dp" />

        <!-- Ô nhập mã OTP -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Mã OTP"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="@color/stroke_selector"
            app:boxStrokeWidth="1dp"
            app:startIconDrawable="@drawable/ic_otp"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextOTP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/inter_18pt_light"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nút tiếp tục -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIẾP TỤC"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_18pt_bold"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:backgroundTint="#FF5722" />

        <!-- Gửi lại mã -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="48dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại mã OTP"
                android:fontFamily="@font/inter_24pt_regular"
                android:textSize="16sp"
                android:textColor="#FF5722"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
