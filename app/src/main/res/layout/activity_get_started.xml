<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GetStarted"
    android:orientation="vertical"
    app:flow_horizontalAlign="center">

    <ImageView
        android:id="@+id/sliderImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/slider2"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/sliderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:fontFamily="@font/inter_28pt_bold"
        android:text="@string/title3"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/sliderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_18pt_light"
        android:text="@string/desc3"
        android:textAlignment="center"
        android:gravity="center"
        android:maxWidth="255dp"
        android:ellipsize="none"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startbtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="48dp"
        android:text="BẮT ĐẦU"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/inter_24pt_bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#FF5722"
        android:layout_gravity="center"/>
</LinearLayout>